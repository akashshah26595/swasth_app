<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.mastek.blue.deep.swasthtesting.Dashboard">
    <Button
            android:layout_gravity="center_horizontal"
            android:layout_margin="24dp"
            android:text="@string/feedback_button"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/beginFeedbackButton"        />

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true">

            <ImageButton
                    android:src="@drawable/ic_currency_inr_black_24dp"
                    android:alpha="0.7"
                    android:clickable="true"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp"
                    android:padding="24dp"
                    android:background="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <TextView
                    android:alpha="0.8"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Credits"
                    android:textAllCaps="true"
                    android:layout_marginLeft="75dp"
                    android:layout_marginBottom="0dp"
                    android:layout_gravity="bottom"/>

            </FrameLayout>


            <FrameLayout
                android:id="@+id/helpline"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageButton
                    android:id="@+id/helpline_image"
                    android:src="@drawable/ic_call_black_24dp"
                    android:alpha="0.7"
                    android:clickable="true"
                    android:layout_marginRight="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:padding="24dp"
                    android:background="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

<TextView
                    android:alpha="0.8"
                    android:id="@+id/helpline_text"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Helpline"
                    android:textAllCaps="true"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="50dp"
                    />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

        <ImageButton
                android:src="@drawable/ic_account_multiple_black_24dp"
                android:alpha="0.7"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:padding="24dp"
                android:background="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                    android:alpha="0.8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Family"
                    android:textAllCaps="true"
                    android:layout_marginLeft="75dp"
                    android:layout_marginBottom="0dp"
                    android:layout_gravity="bottom"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageButton
                    android:id="@+id/centers_image"
                    android:clickable="true"
                    android:src="@drawable/ic_google_maps_black_24dp"
                    android:alpha="0.7"
                    android:layout_marginRight="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:padding="24dp"
                    android:background="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/centers_text"
                    android:clickable="true"
                    android:alpha="0.8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Centers"
                    android:textAllCaps="true"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="50dp"
                    />

            </FrameLayout>



        </LinearLayout>

    </LinearLayout>

<TextView
        android:layout_marginTop="24dp"
        android:background="#26A69A"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_alignParentBottom="true"
        android:text="@string/card_no_textview"
        android:id="@+id/textView"
        android:textSize="24sp"
        android:textAlignment="center"
        />


</RelativeLayout>